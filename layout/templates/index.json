# File: sections/hero-master-blend.liquid
<section class="mb-0 relative">
  <picture>
    <source media="(max-width: 767px)" srcset="{{ section.settings.mobile_image | image_url }}">
    <img src="{{ section.settings.desktop_image | image_url }}" alt="Master Blend hero" class="w-full h-[60vh] object-cover">
  </picture>
  <div class="absolute inset-0 flex items-center">
    <div class="container mx-auto px-6 max-w-5xl">
      <div class="inline-block bg-white/80 backdrop-blur rounded-2xl p-6">
        {% if section.settings.eyebrow != '' %}
          <p class="text-sm tracking-wide uppercase">{{ section.settings.eyebrow }}</p>
        {% endif %}
        <h1 class="text-3xl md:text-5xl font-semibold leading-tight mt-1">{{ section.settings.heading }}</h1>
        <p class="mt-3 max-w-2xl">{{ section.settings.subheading }}</p>
        <div class="mt-5 flex gap-3">
          <a href="{{ section.settings.primary_link }}" class="btn btn-primary">{{ section.settings.primary_label }}</a>
          <a href="{{ section.settings.secondary_link }}" class="btn btn-secondary">{{ section.settings.secondary_label }}</a>
        </div>
        {% if section.settings.badge_text != '' %}
          <div class="mt-4 text-xs opacity-80">{{ section.settings.badge_text }}</div>
        {% endif %}
      </div>
    </div>
  </div>
  {% if section.settings.show_trustbar %}
    <div class="bg-white py-3 border-t">
      {% render 'trust-badges' %}
    </div>
  {% endif %}
</section>
{% schema %}
{
  "name": "Hero — Master Blend",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {"type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "All‑Natural Relief"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Master Blend — multi‑purpose comfort, crafted by nature"},
    {"type": "textarea", "id": "subheading", "label": "Subheading", "default": "Chemical‑free, small‑batch, coconut‑oil base with clove, lemon, cinnamon bark, eucalyptus, and rosemary."},
    {"type": "image_picker", "id": "desktop_image", "label": "Desktop image"},
    {"type": "image_picker", "id": "mobile_image", "label": "Mobile image"},
    {"type": "text", "id": "primary_label", "label": "Primary button label", "default": "Shop Master Blend"},
    {"type": "url", "id": "primary_link", "label": "Primary button link"},
    {"type": "text", "id": "secondary_label", "label": "Secondary button label", "default": "How it works"},
    {"type": "url", "id": "secondary_link", "label": "Secondary button link"},
    {"type": "text", "id": "badge_text", "label": "Badge text", "default": "Small‑batch • USA made"},
    {"type": "checkbox", "id": "show_trustbar", "label": "Show trust bar", "default": true}
  ],
  "presets": [{"name": "Hero — Master Blend"}]
}
{% endschema %}


# File: sections/benefits-grid.liquid
<section class="py-14">
  <div class="container mx-auto px-6">
    <p class="text-sm uppercase tracking-wide">{{ section.settings.kicker }}</p>
    <h2 class="text-3xl font-semibold mt-1">{{ section.settings.heading }}</h2>
    <div class="grid md:grid-cols-4 gap-6 mt-8">
      {% for block in section.blocks %}
        <div class="p-6 bg-white rounded-2xl shadow-sm" {{ block.shopify_attributes }}>
          <div class="text-3xl">{% render 'icon-ml', name: block.settings.icon %}</div>
          <h3 class="mt-3 font-medium">{{ block.settings.title }}</h3>
          <p class="text-sm mt-1 opacity-80">{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Benefits grid",
  "settings": [
    {"type": "text", "id": "kicker", "label": "Kicker", "default": "Multi‑purpose relief"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Why customers love Master Blend"}
  ],
  "blocks": [
    {"type": "benefit", "name": "Benefit", "settings": [
      {"type": "text", "id": "icon", "label": "Icon name (muscle, head, leaf, shield)", "default": "muscle"},
      {"type": "text", "id": "title", "label": "Title", "default": "Fast pain relief"},
      {"type": "textarea", "id": "text", "label": "Text", "default": "Soothing comfort for joints & muscles."}
    ]}
  ],
  "presets": [{"name": "Benefits grid"}]
}
{% endschema %}


# File: sections/ingredients-tiles.liquid
<section id="{{ section.settings.id_anchor | default: 'ingredients' }}" class="py-16 bg-neutral-50">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-semibold">{{ section.settings.heading }}</h2>
    <p class="mt-2 opacity-80">{{ section.settings.subheading }}</p>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 mt-8">
      {% for block in section.blocks %}
        <div class="bg-white rounded-2xl overflow-hidden shadow-sm" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.title }}" class="w-full h-44 object-cover">
          {% endif %}
          <div class="p-5">
            <h3 class="font-medium">{{ block.settings.title }}</h3>
            <p class="text-sm opacity-80 mt-1">{{ block.settings.benefit }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Ingredients tiles",
  "settings": [
    {"type": "text", "id": "id_anchor", "label": "Anchor id", "default": "ingredients"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Nature’s powerhouse ingredients"},
    {"type": "textarea", "id": "subheading", "label": "Subheading", "default": "Each ingredient is selected for targeted benefits."}
  ],
  "blocks": [
    {"type": "ingredient", "name": "Ingredient", "settings": [
      {"type": "image_picker", "id": "image", "label": "Image"},
      {"type": "text", "id": "title", "label": "Title", "default": "Coconut Oil"},
      {"type": "textarea", "id": "benefit", "label": "Benefit", "default": "Rich in antioxidants; supports skin barrier."}
    ]}
  ],
  "presets": [{"name": "Ingredients tiles"}]
}
{% endschema %}


# File: sections/product-bundles.liquid
<section class="py-16">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-semibold">{{ section.settings.heading }}</h2>
    <p class="mt-2 opacity-80">{{ section.settings.subheading }}</p>
    <div class="grid md:grid-cols-3 gap-6 mt-8">
      {% assign handles = section.settings | json | parse_json %}
      {% assign main = section.settings.product_main | default: '' %}
      {% assign psmall = section.settings.product_pack_small | default: '' %}
      {% assign plarge = section.settings.product_pack_large | default: '' %}

      {% for handle in main | append: ',' | append: psmall | append: ',' | append: plarge | split: ',' %}
        {% assign product = all_products[handle] %}
        {% if product %}
          <div class="bg-white rounded-2xl shadow-sm p-5">
            <a href="{{ product.url }}" class="block">
              {% if product.featured_image %}
                <img class="w-full h-52 object-cover rounded-xl" src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.title }}">
              {% endif %}
              <h3 class="mt-3 font-medium">{{ product.title }}</h3>
            </a>
            <div class="mt-2">{% render 'price', product: product %}</div>
            {% if section.settings.enable_subscriptions and product.selling_plan_groups.size > 0 %}
              <div class="mt-2 text-sm">Subscribe & save available</div>
            {% endif %}
            <form method="post" action="/cart/add" class="mt-3">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="btn btn-primary w-full">Add to cart</button>
            </form>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Product bundles",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Choose your jar or bundle"},
    {"type": "textarea", "id": "subheading", "label": "Subheading", "default": "Save with value packs and subscriptions."},
    {"type": "product", "id": "product_main", "label": "Main single product"},
    {"type": "product", "id": "product_pack_small", "label": "Small pack"},
    {"type": "product", "id": "product_pack_large", "label": "Family pack"},
    {"type": "checkbox", "id": "enable_subscriptions", "label": "Show \"Subscribe & save\" flag when available", "default": true}
  ],
  "presets": [{"name": "Product bundles"}]
}
{% endschema %}


