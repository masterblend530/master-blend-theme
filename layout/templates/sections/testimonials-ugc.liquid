<section class="py-16 bg-neutral-50">
<div class="container mx-auto px-6">
<h2 class="text-3xl font-semibold">{{ section.settings.heading }}</h2>
<div class="grid md:grid-cols-3 gap-6 mt-8">
{% for block in section.blocks %}
<figure class="bg-white rounded-2xl p-6 shadow-sm" {{ block.shopify_attributes }}>
<div class="flex items-center gap-1 text-amber-500">
{% for i in (1..block.settings.stars) %}★{% endfor %}
</div>
<blockquote class="mt-2">{{ block.settings.text }}</blockquote>
<figcaption class="mt-3 text-sm opacity-80">— {{ block.settings.author }}</figcaption>
</figure>
{% endfor %}
</div>
</div>
</section>
{% schema %}
{
"name": "Testimonials (UGC)",
"settings": [
{"type": "text", "id": "heading", "label": "Heading", "default": "Real stories. Real relief."}
],
"blocks": [
{"type": "quote", "name": "Quote", "settings": [
{"type": "range", "id": "stars", "label": "Stars", "min": 1, "max": 5, "step": 1, "default": 5},
{"type": "textarea", "id": "text", "label": "Text", "default": "This helped my back within minutes."},
{"type": "text", "id": "author", "label": "Author", "default": "A happy customer"}
]}
],
"presets": [{"name": "Testimonials (UGC)"}]
}
{% endschema %}
