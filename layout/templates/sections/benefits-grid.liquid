<section class="py-14">
<div class="container mx-auto px-6">
<p class="text-sm uppercase tracking-wide">{{ section.settings.kicker }}</p>
<h2 class="text-3xl font-semibold mt-1">{{ section.settings.heading }}</h2>
<div class="grid md:grid-cols-4 gap-6 mt-8">
{% for block in section.blocks %}
<div class="p-6 bg-white rounded-2xl shadow-sm" {{ block.shopify_attributes }}>
<div class="text-3xl">{% render 'icon-ml', name: block.settings.icon %}</div>
<h3 class="mt-3 font-medium">{{ block.settings.title }}</h3>
<p class="text-sm mt-1 opacity-80">{{ block.settings.text }}</p>
</div>
{% endfor %}
</div>
</div>
</section>
{% schema %}
{
"name": "Benefits grid",
"settings": [
{"type": "text", "id": "kicker", "label": "Kicker", "default": "Multiâ€‘purpose relief"},
{"type": "text", "id": "heading", "label": "Heading", "default": "Why customers love Master Blend"}
],
"blocks": [
{"type": "benefit", "name": "Benefit", "settings": [
{"type": "text", "id": "icon", "label": "Icon name (muscle, head, leaf, shield)", "default": "muscle"},
{"type": "text", "id": "title", "label": "Title", "default": "Fast pain relief"},
{"type": "textarea", "id": "text", "label": "Text", "default": "Soothing comfort for joints & muscles."}
]}
],
"presets": [{"name": "Benefits grid"}]
}
{% endschema %}
