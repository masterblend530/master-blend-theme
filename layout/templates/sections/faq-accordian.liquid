<section class="py-16">
<div class="container mx-auto px-6">
<h2 class="text-3xl font-semibold">{{ section.settings.heading }}</h2>
<div class="mt-6 divide-y">
{% for block in section.blocks %}
<details class="py-4" {{ block.shopify_attributes }}>
<summary class="cursor-pointer font-medium">{{ block.settings.q }}</summary>
<div class="mt-2 opacity-80">{{ block.settings.a }}</div>
</details>
{% endfor %}
</div>
</div>
</section>
{% schema %}
{
"name": "FAQ accordion",
"settings": [
{"type": "text", "id": "heading", "label": "Heading", "default": "Questions & answers"}
],
"blocks": [
{"type": "item", "name": "Item", "settings": [
{"type": "text", "id": "q", "label": "Question", "default": "How do I use Master Blend?"},
{"type": "textarea", "id": "a", "label": "Answer", "default": "Massage a small amount into the area of discomfort 2–3× daily as needed."}
]}
],
"presets": [{"name": "FAQ accordion"}]
}
{% endschema %}
