<section class="mb-0 relative">
<picture>
<source media="(max-width: 767px)" srcset="{{ section.settings.mobile_image | image_url }}">
<img src="{{ section.settings.desktop_image | image_url }}" alt="Master Blend hero" class="w-full h-[60vh] object-cover">
</picture>
<div class="absolute inset-0 flex items-center">
<div class="container mx-auto px-6 max-w-5xl">
<div class="inline-block bg-white/80 backdrop-blur rounded-2xl p-6">
{% if section.settings.eyebrow != '' %}
<p class="text-sm tracking-wide uppercase">{{ section.settings.eyebrow }}</p>
{% endif %}
<h1 class="text-3xl md:text-5xl font-semibold leading-tight mt-1">{{ section.settings.heading }}</h1>
<p class="mt-3 max-w-2xl">{{ section.settings.subheading }}</p>
<div class="mt-5 flex gap-3">
<a href="{{ section.settings.primary_link }}" class="btn btn-primary">{{ section.settings.primary_label }}</a>
<a href="{{ section.settings.secondary_link }}" class="btn btn-secondary">{{ section.settings.secondary_label }}</a>
</div>
{% if section.settings.badge_text != '' %}
<div class="mt-4 text-xs opacity-80">{{ section.settings.badge_text }}</div>
{% endif %}
</div>
</div>
</div>
{% if section.settings.show_trustbar %}
<div class="bg-white py-3 border-t">
{% render 'trust-badges' %}
</div>
{% endif %}
</section>
{% schema %}
{
"name": "Hero — Master Blend",
"tag": "section",
"class": "section-hero",
"settings": [
{"type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "All‑Natural Relief"},
{"type": "text", "id": "heading", "label": "Heading", "default": "Master Blend — multi‑purpose comfort, crafted by nature"},
{"type": "textarea", "id": "subheading", "label": "Subheading", "default": "Chemical‑free, small‑batch, coconut‑oil base with clove, lemon, cinnamon bark, eucalyptus, and rosemary."},
{"type": "image_picker", "id": "desktop_image", "label": "Desktop image"},
{"type": "image_picker", "id": "mobile_image", "label": "Mobile image"},
{"type": "text", "id": "primary_label", "label": "Primary button label", "default": "Shop Master Blend"},
{"type": "url", "id": "primary_link", "label": "Primary button link"},
{"type": "text", "id": "secondary_label", "label": "Secondary button label", "default": "How it works"},
{"type": "url", "id": "secondary_link", "label": "Secondary button link"},
{"type": "text", "id": "badge_text", "label": "Badge text", "default": "Small‑batch • USA made"},
{"type": "checkbox", "id": "show_trustbar", "label": "Show trust bar", "default": true}
],
"presets": [{"name": "Hero — Master Blend"}]
}
{% endschema %}
